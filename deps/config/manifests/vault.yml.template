  type: aws
  name: aws-europe
  specs:
    access_id: {REPLACE BY AWS ACCESS ID}
    secret_key: {REPLACE BY AWS SECRET KEY}
    region: {REPLACE BY AWS SECRET REGION}
    debug: false
