- kind: vault
  type: azure
  name: akv-europe
  specs:
    vault_name: {REPLACE BY VAULT NAME}
    tenant_id: {REPLACE BY AKV TENANT ID}
    client_id: {REPLACE BY AKV CLIENT ID}
    client_secret: {REPLACE BY AKV CLIENT SECRET}

